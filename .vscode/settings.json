{
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.rulers": [82],
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.format.enable": true,
  "javascript.format.enable": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "chat.promptFilesRecommendations": {
    "speckit.constitution": true,
    "speckit.specify": true,
    "speckit.plan": true,
    "speckit.tasks": true,
    "speckit.implement": true
  },
  "chat.tools.terminal.autoApprove": {
    ".specify/scripts/bash/": true,
    ".specify/scripts/powershell/": true
  },
  "tailwindCSS.lint.suggestCanonicalClasses": "ignore",
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/node_modules/@radix-ui/**",
    "**/node_modules/lucide-react/dist/esm/icons/*[^Icon].js"
  ],
  "search.exclude": {
    "**/node_modules/@radix-ui": true
  },
  "i18n-ally.localesPaths": ["./src/lib/i18n/translations"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "de",
  "i18n-ally.extract.ignored": [" | "],
  "i18n-ally.extract.ignoredByFiles": {
    "src/test/orpc-error-type-safety.test.ts": true
  },
  "i18n-ally.ignoreFiles": ["src/test/**"],
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnPaste": true,
  "emmet.showExpandedAbbreviation": "never"
}
