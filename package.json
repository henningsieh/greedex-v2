{
  "name": "next-websocket-sever",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "bunx kill-port 3000 4000 || true",
    "dev": "concurrently --kill-others \"bun run dev:next\" \"bun run dev:socket\"",
    "dev:next": "next dev",
    "dev:memory": "NODE_OPTIONS='--max-old-space-size=4096' concurrently --kill-others \"NODE_OPTIONS='--max-old-space-size=4096' next dev\" \"bun run dev:socket\"",
    "dev:socket": "bun --watch src/socket-server.ts",
    "dev:inspect": "PORT=3001 NEXT_DIST_DIR=.next-inspect NEXT_PUBLIC_BASE_URL=http://localhost:3001 concurrently --kill-others \"SOCKET_PORT=4001 next dev -p 3001\" \"SOCKET_PORT=4001 bun --watch src/socket-server.ts\"",
    "dev:inspect-brk": "PORT=3001 NEXT_DIST_DIR=.next-inspect NEXT_PUBLIC_BASE_URL=http://localhost:3001 SOCKET_PORT=4001 concurrently --kill-others \"next dev -p 3001\" \"SOCKET_PORT=4001 bun --watch src/socket-server.ts\"",
    "dev:clickdummy": "bunx http-server docs/greendex-clickdummy/build -p 5000",
    "prebuild": "bun run generate:sri && bun run check:sri && bun run db:migrate",
    "build": "next build",
    "prestart": "bunx kill-port 3000 4000 || true && sleep 1",
    "start": "concurrently --kill-others \"next start\" \"cross-env NODE_ENV=production bun src/socket-server.ts\"",
    "format": "oxfmt",
    "lint": "oxlint --fix --fix-suggestions --fix-dangerously && bunx tsc --noEmit",
    "generate:sri": "node scripts/generate-sri.js",
    "check:sri": "node scripts/check-sri.js",
    "test": "bun run test:run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:interactive": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "HEADED=true playwright test --headed",
    "test:e2e:report": "playwright show-report src/__tests__/e2e/.playwright/report",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "TERM=dumb NO_COLOR=1 FORCE_COLOR=0 drizzle-kit migrate --config ./drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "auth:generate": "bunx @better-auth/cli generate --config src/lib/better-auth/index.ts --output ./src/lib/drizzle/schemas/auth-schema.ts --yes",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@orpc/client": "^1.13.4",
    "@orpc/openapi": "^1.13.4",
    "@orpc/server": "^1.13.4",
    "@orpc/tanstack-query": "^1.13.4",
    "@paralleldrive/cuid2": "^3.0.6",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@react-email/components": "1.0.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.17",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "~1.4.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "cobe": "^0.6.5",
    "country-flag-icons": "^1.6.4",
    "cross-env": "^10.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "embla-carousel-react": "^8.6.0",
    "i18n-iso-countries": "^7.14.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.562.0",
    "motion": "^12.24.0",
    "next": "^16.1.1",
    "next-intl": "^4.6.1",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.12",
    "nuqs": "^2.8.6",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-error-boundary": "^6.0.3",
    "react-hook-form": "^7.70.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.8",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260113.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "tailwindcss": "^4.1.18",
    "ts-prune": "^0.10.3",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "config": {
    "scalarVersion": "1.25.0"
  }
}
