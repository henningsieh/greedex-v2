{
  "name": "greendex-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint --fix --fix-suggestions --fix-dangerously",
    "format": "oxfmt",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.5.3",
    "typescript": "^6.0.0-dev.20260124"
  },
  "packageManager": "pnpm@10.13.1"
}
