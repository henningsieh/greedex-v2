{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 82,
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "/apps/calculator/.next/**",
    "dist/**",
    "build/**",
    "docs/**",
    ".specify/**",
    "specs/**",
    "apps/calculator/src/components/ui/**",
    "apps/calculator/src/lib/drizzle/migrations/**",
    "apps/calculator/src/lib/drizzle/schemas/**",
    "packages/**/dist/**"
  ],
  "experimentalSortImports": {
    "ignoreCase": true,
    "newlinesBetween": true
  },
  "experimentalTailwindcss": {
    "stylesheet": "./apps/calculator/src/app/globals.css",
    "attributes": ["class", "className"],
    "functions": ["clsx", "cn", "cva", "twMerge"],
    "preserveDuplicates": false,
    "preserveWhitespace": false
  }
}
